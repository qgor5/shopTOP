<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <title>КупуйТовар - Інтернет-магазин</title>
    <style>
        body { font-family: Arial, sans-serif; }
        .product { border: 1px solid #ddd; padding: 15px; margin: 10px; }
    </style>
</head>
<body>
    <header>
        <h1>КупуйТовар</h1>
        <nav>
            <a href="/catalog">Каталог</a> | 
            <a href="/cart">Кошик</a>
        </nav>
    </header>
    
    <main>
        <h2>Популярні товари</h2>
        <div id="products"></div>
    </main>

    <script>
        // Пример данных товаров
        const products = [
            { id: 1, name: "Смартфон", price: 8999 },
            { id: 2, name: "Ноутбук", price: 21999 }
        ];

        document.getElementById('products').innerHTML = products.map(product => `
            <div class="product">
                <h3>${product.name}</h3>
                <p>Ціна: ${product.price} грн</p>
                <button onclick="addToCart(${product.id})">В кошик</button>
            </div>
        `).join('');

        function addToCart(id) {
            alert(`Товар ${id} додано в кошик!`);
        }
    </script>
</body>
</html>
